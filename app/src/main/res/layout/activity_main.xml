<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:context="com.example.defenselabs.droneinterdictapp.MainActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:layout_marginRight="80dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imgs"
        android:src="@drawable/connect"
        android:scaleType="fitXY"
        android:visibility="gone"
        />



    <ImageView
        android:layout_width="145dp"
        android:layout_height="155dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/airspace_logo"
        android:id="@+id/logo"
        android:fillAfter="true"
        android:fillEnabled="true"
        android:scaleType="centerCrop"
        />
    <ImageButton
        android:layout_width="105dp"
        android:layout_height="115dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:background="@null"
        android:layout_marginTop="40dp"
        android:src="@drawable/drone_image"
        android:id="@+id/btn_connect"
        android:scaleType="centerCrop"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_connect"
        android:text="Click to get started !"
        android:textSize="12dp"
        android:id="@+id/text_connect"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"/>


    <ImageButton
        android:id="@+id/btn_shoot"
        android:background="@null"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:src="@drawable/shoot"
        android:scaleType="centerCrop"
        android:padding="0dp"
        android:visibility="gone"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_setings"
        android:src="@drawable/settingsimg"
        android:scaleType="fitCenter"
        android:background="@drawable/circle"
        android:layout_margin="5dp"
        android:alpha="0.6"
        android:padding="5dp"
        android:layout_alignParentEnd="true"

        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/img_reload"
        android:src="@drawable/reload"
        android:scaleType="fitCenter"
        android:background="@drawable/circle"
        android:layout_margin="5dp"
        android:alpha="0.8"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        />


</RelativeLayout>
